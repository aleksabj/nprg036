{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://example.org/schemas/schema-2.json",
  "title": "People",
  "type": "object",
  "required": ["people"],
  "properties": {
    "@context": {},

    "people": {
      "type": "array",
      "minItems": 3,
      "items": { "$ref": "#/$defs/Person" }
    }
  },
  "additionalProperties": false,

  "$defs": {
    "IRI": {
      "type": "string",
      "format": "uri"
    },

    "Person": {
      "type": "object",
      "required": ["iri", "name", "roles", "birthYear"],
      "properties": {
        "iri": { "$ref": "#/$defs/IRI" },

        "type": { "type": "string" },

        "name": { "type": "string", "minLength": 1 },

        "roles": {
          "type": "array",
          "minItems": 1,
          "items": { "enum": ["Actor", "Director"] }
        },

        "birthYear": {
          "type": "string",
          "pattern": "^[0-9]{4}$"
        },

        "phone": { "$ref": "#/$defs/IRI" },

        "actsIn": {
          "type": "array",
          "items": { "$ref": "#/$defs/IRI" }
        },

        "directed": {
          "type": "array",
          "items": { "$ref": "#/$defs/IRI" }
        }
      },
      "additionalProperties": false
    }
  }
}
